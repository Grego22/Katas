def add_length(str)
  words = str.split(" ")
  str_length = []
  for i in words
    str_length.push("#{i} #{i.length}")
  end
  str_length
end

# Clever Solution
def add_length(str)
  str.split.map { |word| "#{word} #{word.length}" }
end

def add_length(str)
  str.split.map { |s| "#{s} #{s.size}" }
end
